<android.support.v7.widget.CardView android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dp_16"
    android:layout_margin="@dimen/dp_8"
    app:cardElevation="@dimen/dp_8"
    android:id="@+id/table_card">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_activity_padding"
        tools:context=".fragment.TableFragment">


        <ImageView
            android:id="@+id/table_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/table_image_description"
            android:src="@drawable/tableimage" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/table_image"
            android:layout_toEndOf="@+id/table_image"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/table_image"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/table_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="MESA 1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/persons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Personas: 4" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/addPlate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_plate" />

        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>